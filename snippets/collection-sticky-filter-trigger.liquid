{% comment %} Sticky Filter {% endcomment %}
<button
    type="button"
    class="collapsible-trigger collapsible-trigger-btn sticky-filter--button collapsible--auto-height{% unless collapsed_state %} is-open{% endunless %} tag-list__header"
    data-controls="{{ location }}-{{ index }}"
    aria-controls="{{ location }}-{{ index }}"
    data-collapsible-id="{{ id }}">
    <span class="collapsible-trigger__layout collapsible-trigger__layout--inline">
      <span>{{ title | escape }}</span>
      {%- render 'collapsible-icons' -%}
    </span>
  </button>